# Development Environment Configuration
# Copy this file to .env for local development

# Server Configuration
PORT=8080
HOST=0.0.0.0
DEBUG=true

# AWS Configuration (for local development with AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# S3 Configuration
S3_BUCKET_NAME=gambix-strata-development
S3_ENDPOINT_URL=https://s3.amazonaws.com

# DynamoDB Configuration
DYNAMODB_TABLE_PREFIX=gambix_strata_dev_
DYNAMODB_ENDPOINT_URL=

# Security Configuration (more permissive for development)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000
SENTRY_DSN=

# Rate Limiting (more lenient for development)
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# JWT Configuration (for development)
AWS_USER_POOLS_ID=your_user_pool_id_here
AWS_USER_POOLS_REGION=us-east-1

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FILE=logs/web_scraper.log
