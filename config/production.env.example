# Production Environment Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=8080
HOST=0.0.0.0
DEBUG=false

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# S3 Configuration
S3_BUCKET_NAME=gambix-strata-production
S3_ENDPOINT_URL=https://s3.amazonaws.com

# DynamoDB Configuration
DYNAMODB_TABLE_PREFIX=gambix_strata_

# Security Configuration
ALLOWED_ORIGINS=https://strata.cx,https://www.strata.cx
SENTRY_DSN=your_sentry_dsn_here

# Rate Limiting (requests per hour)
RATE_LIMIT_PER_HOUR=100
RATE_LIMIT_PER_DAY=1000

# JWT Configuration (for production)
AWS_USER_POOLS_ID=your_user_pool_id_here
AWS_USER_POOLS_REGION=us-east-1

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/web_scraper.log
