# Application Configuration
PORT=8080
HOST=0.0.0.0
DEBUG=False
FLASK_ENV=production

# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_PATH=/app/data/gambix_strata.db

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_STORAGE_URL=memory://

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/web_scraper.log

# AWS Configuration (for future DynamoDB migration)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# MySQL Configuration (for future EC2 migration)
MYSQL_HOST=
MYSQL_PORT=3306
MYSQL_DATABASE=gambix_strata
MYSQL_USER=
MYSQL_PASSWORD=

# Application Settings
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=/app/scraped_data
ALLOWED_EXTENSIONS=html,css,js,json,txt

# Performance Settings
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Grafana (for production)
GRAFANA_PASSWORD=admin
